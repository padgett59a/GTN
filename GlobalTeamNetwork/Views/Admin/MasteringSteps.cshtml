@model IEnumerable<MasteringStep>
@{
    ViewData["Title"] = "Mastering Steps";
    ViewData["PageName"] = "admin_masteringsteps";
}

<div class="subheader">
    <h1 class="subheader-title">
        <i class="fal fa-th-list text-primary"></i>  Mastering Steps
    </h1>
</div>
<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                        <thead>
                            <tr>
                                <th style="width:10%">msID</th>
                                <th style="width:30%">Step</th>
                                <th style="width:10%">Default Pay</th>
                                <th style="width:30%">Notes</th>
                                <th style="width:20%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var step in Model)
                            {
                            <tr>
                                <td>@step.msID</td>
                                <td>@step.Step</td>
                                <td>@step.DefaultPayDollars</td>
                                <td>@step.Notes</td>
                                <td>
                                    <button type="button" class="btn btn-xs btn-primary waves-effect waves-themed">Edit</button> 
                                </td>
                            </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th style="width:10%">tsID</th>
                                <th style="width:10%">Step</th>
                                <th style="width:10%">Default Pay</th>
                                <th style="width:50%">Notes</th>
                                <th style="width:20%">Actions</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
