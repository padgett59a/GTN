@model IEnumerable<MediaType>
@{
    ViewData["Title"] = "Media Types";
    ViewData["PageName"] = "admin_mediatypes";
}

<div class="subheader">
    <h1 class="subheader-title">
        <i class="fal fa-th-list text-primary"></i>  Media Types
    </h1>
</div>
<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                        <thead>
                            <tr>
                                <th style="width:10%">Id</th>
                                <th style="width:10%">Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mediaType in Model)
                            {
                                <tr>
                                    <td>@mediaType.MediaTypeId</td>
                                    <td>@mediaType.MediaTypeName</td>
                                    <td>
                                        <button type="button" class="btn btn-xs btn-primary waves-effect waves-themed">Edit</button> 
                                    </td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
