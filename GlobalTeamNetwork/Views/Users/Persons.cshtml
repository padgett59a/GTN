@model List<Person>
@{
    ViewData["Category1"] = "User Data";
    ViewData["Title"] = "Persons";
    ViewData["Heading"] = "<i class='fal fa-folder-open'></i> " + ViewData["Title"] + " (" + Model.Count + ")";
    ViewData["PageName"] = "users_persons";


}
@section HeadBlock {
    <link rel="stylesheet" media="screen, print" href="~/css/datagrid/datatables/datatables.bundle.css">
}


@*<div class="subheader">
    <h1 class="subheader-title">
        <i class="fal fa-th-list text-primary"></i>  Persons
    </h1>
</div>*@
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Blogs</title>
</head>
<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>FullName</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Location</th>
                                <th>Notes</th>
                                <th>OrgId</th>
                                <th>PersonType</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.personID</td>
                                    <td>@item.FullName</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>@item.Location</td>
                                    <td>@item.Notes</td>
                                    <td>@item.orgID</td>
                                    <td>@item.personTypeID</td>
                                    <td>
                                        <button type="button" class="btn btn-xs btn-primary waves-effect waves-themed">Edit</button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>FullName</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Location</th>
                                <th>Notes</th>
                                <th>OrgId</th>
                                <th>PersonType</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
