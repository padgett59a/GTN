@model IEnumerable<GlobalTeamNetwork.Models.Curriculum>

@{
    ViewData["Title"] = "Curriculum";
}

<h1>Curriculum</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="tblMain" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CurriculumID)
            </th>
            <th class="columnSort">
                @Html.DisplayNameFor(model => model.CurriculumName) &nbsp;<span class="nobreak sortArrow">&#8593;&#8595;</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CurriculumID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurriculumName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CurriculumID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CurriculumID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CurriculumID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


